function htb-Xplorer(){
	tput cnorm

	if [ -d "/opt/h4Ck/htbXplorer-Plus" ]; then
		echo -ne "\n\t${bold}${cyan}<|[${red}!${cyan}]|> ${black} ~~~  ${end}${yellow}\thtb-Xplorer already in the system \t${bold}${cyan}^${bold}${red}~${bold}${cyan}^${end}${cyan}\n\n" && sleep 1
	else
		echo -ne "\n\t${bold}${cyan}<|[+]|> ${end}${blue}Cloning htbXplorer from github${cyan}--> ${end}${cyan}\n\n"
		sleep 1 && sudo mkdir -p /opt/h4Ck/htbXplorer-Plus
	    if [ $? -eq 0 ]; then
			sudo git clone "https://github.com/4tz1Lu7h/htbXplorer-Plus.git" /opt/h4Ck/htbXplorer-Plus
		    if [ $? -eq 0 ]; then
				sudo chmod +x /opt/h4Ck/htbXplorer-Plus/htbXplorer
				echo -ne "\n\t\t${bold}${purple}~!~!~!~   ${cyan}HtbXplorer-${red}Plus ${cyan}done!   ${purple} ~!~!~!~\n\n"
			else
		        echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad cloning the repo ${red}${stnd}:/ ${end}\n" && sleep 1 && exit 1
			fi
		else
        	echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad creating the folder ${red}${stnd}:/ ${end}\n" && sleep 1 && exit 1
		fi
	fi

	tput civis
}

function common() {
	mkdir r3p0s && cd r3p0s
	if [ $? -eq 0 ]; then
		bspwm
		if [ $? -eq 0 ]; then
			picom
			if [ $? -eq 0 ]; then
				polybar	
				if [ $? -eq 0 ]; then
					code
					if [ $? -eq 0 ]; then
						lsd
						if [ $? -eq 0 ]; then
							firefox_esr
							if [ $? -eq 0 ]; then
								htb-Xplorer
								if [ $? -eq 0 ]; then
									nvim
									if [ $? -eq 0 ]; then
										main 
										if [ $? -eq 0 ]; then
											cd .. && rm -rf r3p0s
										else
											echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad with the main package ${red}${stnd}:/ ${end}${end}\n" && sleep 1 && exit 1
										fi
									else
										echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad with nvim package ${red}${stnd}:/ ${end}${end}\n" && sleep 1 && exit 1
									fi
								else
									echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad with htb-Xplorer repo ${red}${stnd}:/ ${end}${end}\n" && sleep 1 && exit 1
								fi
							else
								echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad with firefox_esr package ${red}${stnd}:/ ${end}${end}\n" && sleep 1 && exit 1
							fi
						else
							echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad with Lsd package ${red}${stnd}:/ ${end}${end}\n" && sleep 1 && exit 1
						fi
					else
						echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad with Code package ${red}${stnd}:/ ${end}\n" && sleep 1 && exit 1
					fi
				else
					echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad Polybar the package ${red}${stnd}:/ ${end}\n" && sleep 1 && exit 1
				fi			
			else
				echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad Picom the package ${red}${stnd}:/ ${end}\n" && sleep 1 && exit 1
			fi
		else
			echo -e "\n\n\t\t${bold}${red}<|[!]|> ${cyan}Something went bad with Bspwm package ${red}${stnd}:/ ${end}\n" && sleep 1 && exit 1
		fi
	else
		echo -e "\n\n\t\t${bold}${red}<|[!]|> ${end}${blue}Remove ${cyan}r3p0s ${blue}folder from previous tries  ${red}${stnd}:~/${end}\n" && sleep 1 && exit 1
	fi
}

